using System;
using System.Collections.Generic;

namespace dzkurs
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            string userInput;
            DeckOfCards deckOfCards = new DeckOfCards();
            deckOfCards.CreateCards();

            Console.WriteLine("Сколько карт хотите вытащить?");

            userInput = Console.ReadLine();

            Console.WriteLine("Вы Вытянули:");

            for (int i = 0; i < Convert.ToInt32(userInput); i++)
            {
                int numberOfCard = random.Next(0, deckOfCards.Cards.Count);
                Console.WriteLine(deckOfCards.Cards[numberOfCard].Name + ' ' + deckOfCards.Cards[numberOfCard].Suit);
                deckOfCards.Cards.Remove(deckOfCards.Cards[numberOfCard]);
            }
        }
    }

    class Card
    {
        public string Name { get; }
        public string Suit { get; }

        public Card(string suit, string name)
        {
            Name = name;
            Suit = suit;
        }
    }

    class DeckOfCards
    {
        public List<Card> Cards = new List<Card>();
        private List<String> _suits = new List<String>() { "♠", "♣", "♦", "♥" };
        private List<String> _names = new List<String>() { "2", "3", "4", "5", "6", "7", "8", "9", "10", "Jack", "Queen", "King", "Ace"};

        public List<Card> CreateCards()
        {
            for (int i = 0; i < _suits.Count; i++)
            {
                for (int j = 0; j < _names.Count; j++)
                {
                    Cards.Add(new Card(_suits[i], _names[j]) );
                }
            }

            return Cards;
        }
    }
}
